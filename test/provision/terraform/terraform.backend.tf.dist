#########################################
# State Backend
#########################################
terraform {
  backend "s3" {
    bucket         = "agent-control-terraform-states"
    dynamodb_table = "agent-control-terraform-states"
    key    = "agent_control-pipeline/TAG_OR_UNIQUE_NAME"
    region = "us-east-2"
  }

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 5.48,  < 6.0"
    }
  }
}
